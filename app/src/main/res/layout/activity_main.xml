<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarThumbVertical="@drawable/scrollview"
    style="@style/ScrollBar">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical"
    tools:context="org.nthree.beginnerjapanese.MainActivity">


    <ImageView
        style="@style/ImageStyle"
        android:src="@drawable/logo"/>


    <ImageView
        android:id="@+id/hiragana"
        style="@style/ImageStyle"
        android:src="@drawable/hiragana"
       />

    <ImageView
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:src="@drawable/line"/>

    <ImageView
        android:id="@+id/numbers"
        style="@style/ImageStyle"
        android:src="@drawable/numbers"
        />

    <ImageView
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:src="@drawable/line"/>

    <ImageView
        android:id="@+id/family"
        style="@style/ImageStyle"
        android:src="@drawable/family"
        android:background="?android:attr/selectableItemBackground"/>

    <ImageView
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:src="@drawable/line"/>

    <ImageView
        android:id="@+id/colors"
        style="@style/ImageStyle"
        android:src="@drawable/colors"
        android:background="?android:attr/selectableItemBackground"/>

    <ImageView
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:src="@drawable/line"/>


    <ImageView
        android:id="@+id/time"
        style="@style/ImageStyle"
        android:src="@drawable/time"
        android:background="?android:attr/selectableItemBackground"/>

    <ImageView
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:src="@drawable/line"/>


    <ImageView
        android:id="@+id/phrases"
        style="@style/ImageStyle"
        android:src="@drawable/phrases"
        android:background="?android:attr/selectableItemBackground"/>

</LinearLayout>

</ScrollView>